<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<display-name>LoginServlet</display-name>
  	<description></description>
  	<servlet-class>com.test.dd.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Register</servlet-name>
  	<display-name>Register</display-name>
  	<description></description>
  	<servlet-class>com.test.dd.Register</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LoginFilter</servlet-name>
  	<display-name>LoginFilter</display-name>
  	<description></description>
  	<servlet-class>com.test.dd.filter.LoginFilter</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>CharacterEncodingFilter</servlet-name>
  	<display-name>CharacterEncodingFilter</display-name>
  	<description></description>
  	<servlet-class>com.test.dd.filter.CharacterEncodingFilter</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>CountFilter</servlet-name>
  	<display-name>CountFilter</display-name>
  	<description></description>
  	<servlet-class>com.test.dd.filter.CountFilter</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Register</servlet-name>
  	<url-pattern>/Register</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LoginFilter</servlet-name>
  	<url-pattern>/LoginFilter</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CharacterEncodingFilter</servlet-name>
  	<url-pattern>/CharacterEncodingFilter</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CountFilter</servlet-name>
  	<url-pattern>/CountFilter</url-pattern>
  </servlet-mapping>
  <filter>
	<filter-name>LoginFilter</filter-name>
	<filter-class>com.test.dd.filter.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>LoginFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  	<dispatcher>REQUEST</dispatcher>
  	<dispatcher>FORWARD</dispatcher>
  </filter-mapping>
  <filter>
  	<filter-name>CharacterEncodingFilter</filter-name>
  	<filter-class>com.test.dd.filter.CharacterEncodingFilter</filter-class>
  	<init-param>
  		<param-name>encoding</param-name>
  		<param-value>GBK</param-value>
  	</init-param>
  </filter>
  <filter-mapping>
  	<filter-name>CharacterEncodingFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  	<dispatcher>REQUEST</dispatcher>
  	<dispatcher>FORWARD</dispatcher>
  </filter-mapping>
   <filter>
  	<filter-name>CountFilter</filter-name>
  	<filter-class>com.test.dd.filter.CountFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>CountFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  	<dispatcher>REQUEST</dispatcher>
  	<dispatcher>FORWARD</dispatcher>
  </filter-mapping>
</web-app>
